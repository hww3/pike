#!/usr/local/bin/pike

import Stdio;

#include "types.h"

int main(int argc, string *argv)
{	
  mixed *ER=catch {
    program output=(program)argv[1];
    werror("Reading ");
    mixed data=stdin->read(0x7fffffff);
    werror("Lexing ");
    data=Sgml.lex(data,"stdin");
    werror("Grouping ");
    data=Sgml.group(data);
    werror("Verifying\n");
    Wmml.verify(data);
    werror("Concretizing\n");
    WMML wmml=Wmml.make_concrete_wmml(data);
    werror("\nWriting output\n");
    output()->output(argv[2],wmml);
    write("Ok\n");
    exit(0);
  };

  if(ER)
  {
    catch {
      if(arrayp(ER) && sizeof(ER)>1 && arrayp(ER[1]))
      {
	mixed x;
	x=ER[1];
	x=reverse(x);
	foreach(x,x)
	  {
	    for(int e=3;e<sizeof(x);e++)
	    {
	      mixed s=x[e];
	      if(!arrayp(s)) s=({s});
	      foreach(s,s)
		{
		  if(object_program(s)==Sgml.Tag)
		  {
		    if(s->pos)
		    {
		      werror("\nThis error occured close to tag "+s->tag+" near "+s->location()+"\n");
		      throw(0);
		    }
		  }
		}
	    }
	  }
      }
    };
    throw(ER);
  }
}
