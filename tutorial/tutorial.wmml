			 ({ "Banan",   "Banankompaniet", 4276 }),
  			 ({ "Apelsin", "Frukt AB",         81 }),
  			 ({ "Banan",   "Frukt AB",       1174 }),
  			 ({ "Apelsin", "General Food",    523 }) });

object t = .Table.table(tabell, fält, typ);

