    			  sum("antal")->rename("antal", "Summa antal")->
    			  rsort("summa antal")));

write("\nLEVERANTÖRER\n\n"+
      .Table.ASCII.encode(t->select("leverantör", "antal")->
  			  sum("antal")->rename("antal", "Summa antal")->
  			  where("summa antal", `>, 1000)->
  			  rsort("summa antal")));

write("\nLEVERANSER\n\n");
write(.Table.ASCII.encode(t->select("frukt")->distinct("frukt")->
