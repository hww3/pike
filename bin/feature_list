#!/usr/local/bin/pike

int main(int argc, string *argv)
{
  write("Features: ");

  if(!_static_modules["Regexp"])
    write("dynamic_modules ");

#if efun(thread_create)
  write("threads ");
#endif

  // Special case
  catch { if(sizeof(indices(master()->resolv("_Crypto"))))
    write("Crypto ");
  };

  foreach(({ "Dbm", "Gdbm", "Gmp", "Gz", "Msql", "Mysql", "Odbc", "Oracle",
	       "Postgres", "Ssleay", "X", "Yp" }), string modname) {
    catch { if (sizeof(indices(master()->resolv(modname))))
      write(modname+" ");
    };
  }

  write("\n");
}
