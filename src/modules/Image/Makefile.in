SRCDIR=@srcdir@
VPATH=@srcdir@:@srcdir@/../..:../..
OBJS = image_module.o \
	image.o font.o matrix.o blit.o pattern.o dct.o \
        operator.o colortable.o polyfill.o \
	orient.o colors.o search.o layers.o default_font.o \
	poly.o
MODNAME=image
MODULE_SUBDIRS=encodings
MODULE_ARCHIVES=encodings/encodings.a
MODULE_LDFLAGS=@LDFLAGS@
REAL_TESTSUITE=module_testsuite.in

CONFIG_HEADERS=@CONFIG_HEADERS@

@SET_MAKE@



@dynamic_module_makefile@

# GCC dumps core on image.c @ OSF1
# This kluge should work around that.
image.o: $(SRCDIR)/image.c
	$(CC) $(CFLAGS) -c $(SRCDIR)/image.c -o image.o || NO_ULIMIT=yes $(CC) $(PREFLAGS) $(NOOPTFLAGS) -c $(SRCDIR)/image.c -o image.o 

pike: all
	cd ../..; $(MAKE) "AR=$(AR)"

pure: all
	cd ../..; $(MAKE) "AR=$(AR)" pure


@dependencies@
