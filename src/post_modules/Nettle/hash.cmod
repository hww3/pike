void
hash_init(void)
{
  werror("Nettle, hash init\n");
  INIT;
}

void
hash_exit(void)
{
  werror("Nettle, hash exit\n");
  if (Fd_ref_program) {
    free_program( Fd_ref_program );
  }
  EXIT;
}

