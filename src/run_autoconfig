#!/bin/sh

# Bootstrap script

fix()
{
  if [ -d $1 ]; then
    ( cd $1 ; autoconf )
  fi

  if [ ! -f $1/dependencies ]; then
    echo >$1/dependencies
  fi
}


fix .
fix modules
for a in modules/*
do
  if test -d $a ; then
    case $a in
      */CVS) ;;
      */RCS) ;;
      *) fix $a ;;
    esac
  fi
done
