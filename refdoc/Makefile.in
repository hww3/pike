#
# Sub Makefile for extracting AutoDoc mk II to XML
#
# $Id: Makefile.in,v 1.18 2001/09/17 23:21:27 nilsson Exp $
#
# Henrik Grubbström 2001-02-02
#

PIKE=pike

VPATH=@SRCDIR@:.

SRCDIR=@SRCDIR@
ROOT=@ROOT@
BUILDROOT=@BUILDROOT@

XMLFILES=

all: extract

extract: xml recurse

.SUFFIXES: .c .pike .pike.in .pmod .pmod.in .xml

.c.xml: $(ROOT)/bin/extract.pike $(ROOT)/bin/mirardoc.pike
	@rm -f "$@.new" 2>/dev/null || /bin/true
	@$(PIKE) $(ROOT)/bin/extract.pike "$<" $(ROOT)/manual/images >"$@.new" && \
	  mv -f "$@.new" "$@"

.pike.xml: $(ROOT)/bin/extract.pike $(ROOT)/bin/mirardoc.pike
	@rm -f "$@.new" 2>/dev/null || /bin/true
	@$(PIKE) $(ROOT)/bin/extract.pike "$<" $(ROOT)/manual/images >"$@.new" && \
	  mv -f "$@.new" "$@"

.pike.in.xml: $(ROOT)/bin/extract.pike $(ROOT)/bin/mirardoc.pike
	@rm -f "$@.new" 2>/dev/null || /bin/true
	@$(PIKE) $(ROOT)/bin/extract.pike "$<" $(ROOT)/manual/images >"$@.new" && \
	  mv -f "$@.new" "$@"

.pmod.xml: $(ROOT)/bin/extract.pike $(ROOT)/bin/mirardoc.pike
	@rm -f "$@.new" 2>/dev/null || /bin/true
	@$(PIKE) $(ROOT)/bin/extract.pike "$<" $(ROOT)/manual/images >"$@.new" && \
	  mv -f "$@.new" "$@"

.pmod.in.xml: $(ROOT)/bin/extract.pike $(ROOT)/bin/mirardoc.pike
	@rm -f "$@.new" 2>/dev/null || /bin/true
	@$(PIKE) $(ROOT)/bin/extract.pike "$<" $(ROOT)/manual/images >"$@.new" && \
	  mv -f "$@.new" "$@"

xml:
	@$(MAKE) PIKE="$(PIKE)" `(cd $(SRCDIR) && \
	  (ls -d *.c *.pike *.pike.in *.pmod *.pmod.in 2>/dev/null | \
	  while read f; do if [ -f "$$f" ]; then echo $$f; fi; done))| \
	  sed -e 's/\.c$$/\.xml/' -e 's/\.pike$$/\.xml/' \
	      -e 's/\.pike.in$$/\.xml/' -e 's/\.pmod\.in$$/\.xml/' \
	      -e 's/\.pmod$$/\.xml/' ` xml_dummy

xml_dummy:

join: recurse_join
	@if ls */*.xml >/dev/null 2>&1; then \
	  $(MAKE) PIKE="$(PIKE) -d" XMLFILES="`echo */*.xml`" sub_manual.xml || \
	    exit 1; \
	fi

sub_manual.xml: $(XMLFILES) $(ROOT)/bin/join.pike
	@$(PIKE) $(ROOT)/bin/join.pike sub_manual.xml $(XMLFILES)

recurse_join:
	@for d in */.; do \
	  if test -d "$$d"; then \
	    (cd $$d && make PIKE="$(PIKE)" join) || exit 1; \
	  fi; \
	done

recurse: subdirectories
	@for d in */.; do \
	  if test -d "$$d"; then \
	    (cd $$d && make PIKE="$(PIKE)" extract) || exit 1; \
	  fi; \
	done

subdirectories:
	@for d in `cd $(SRCDIR) && echo *` CVS; do \
	  if test "$$d" = "CVS" -o ! -d "$(SRCDIR)/$$d/."; then :; else \
	    if test -d "$$d"; then :; else \
	      mkdir "$$d" || exit 1; \
	    fi; \
	    if test -f "$$d/Makefile"; then :; else \
	      sed -e "s#@""SRCDIR@#../$(SRCDIR)/$$d#" \
	          -e "s#@""ROOT@#../$(ROOT)#" \
	          -e "s#@""BUILDROOT@#../$(BUILDROOT)#" \
	        <$(ROOT)/Makefile.in >"$$d/Makefile" || exit 1; \
	    fi; \
	  fi; \
	done

Makefile: $(ROOT)/Makefile.in
	cd $(BUILDROOT) && find . -name Makefile -exec rm {} \;
	@echo Please rerun make.
	@exit 1

clean:
	@rm *.xml *.xml.new || /bin/true
	@for f in *; do if [ -d "$$f/." ]; then rm -rf "$$f"; else :; fi; done
