#!/usr/local/bin/pike

inherit "lib.pike";

int main(int argc, string *argv)
{
  if(sscanf(argv[-1],"%*[a-zA-Z]:%*s"))
  {
    argv[0]="copy";
    if(argv[1]=="-c") argv=argv[..0]+argv[2..];
    if(file_stat(argv[1]+".exe")) argv[1]+=".exe";
    exit(do_cmd( Array.map(argv,fixpath)));
  }else{
    exece("/usr/bin/install",argv[1..]);
    exit(69);
  }
}
