if [ -f $HOME/.bashrc ]; then
  . $HOME/.bashrc
fi

case "$REMOTE_METHOD" in
  sprsh)
    PS1="NT $NTHOST \\$ "
  ;;
  wine)
    PS1="WINE \\$ "
  ;;
  cygwin)
    PS1="Pike-cygwin \\$ "
  ;;
esac

export PS1

case $TERM in
   xterm)
     PROMPT_COMMAND="echo -n ]2\; $REMOTE_METHOD NT compile ]1\; rntcc"
     export PROMPT_COMMAND
   ;;
esac

case :$PATH: in
   *:$NT_TOOL_PATH:*) ;;
   *) PATH=$NT_TOOL_PATH:$PATH ;;
esac

